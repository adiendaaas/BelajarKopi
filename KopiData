    public static ArrayList<Kopi> getListData(){
        ArrayList<Kopi> list = new ArrayList<>();
        for (String[] aData : data) {
            Kopi kopi = new Kopi();
            kopi.setName(aData[0]);
            kopi.setDesc(aData[1]);
            kopi.setFrom(aData[2]);
            kopi.setTaste(aData[3]);
            kopi.setPhoto(aData[4]);

            list.add(kopi);
        }
        return list;
    }
}
